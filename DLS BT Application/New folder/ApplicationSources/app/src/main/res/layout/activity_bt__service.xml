<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bt__service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="commit.myapplication.BT_Service">

    <TextView
        android:text="Init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tbxStatus"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button2" />

    <TextView
        android:text="Program status | "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        tools:textColor="@color/colorPrimary" />

    <Button
        android:text="Start BT service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="startService"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        tools:background="@android:color/darker_gray"
        tools:textColor="@android:color/background_light"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="Stop BT service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="stopService"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tbxDevice"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignTop="@+id/button"
        android:background="@android:color/background_light"
        android:id="@+id/lsvPariedDevice"
        android:scrollbarSize="50dp" />

    <TextView
        android:text="List of near BT/BLE devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_above="@+id/listView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/activity_horizontal_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ELBIT BT/BLE DLS"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Program Version: 1.002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginRight="68dp"
        android:layout_marginEnd="68dp"
        android:layout_above="@+id/lsvPariedDevice"
        android:layout_toLeftOf="@+id/lsvPariedDevice"
        android:layout_toStartOf="@+id/lsvPariedDevice" />

    <TextView
        android:text="Please select device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tbxDevice"
        tools:text="Please select device"
        android:layout_above="@+id/tbxStatus"
        android:layout_alignLeft="@+id/tbxStatus"
        android:layout_alignStart="@+id/tbxStatus"
        android:layout_marginBottom="15dp" />

    <TextView
        android:text="Device status | "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        tools:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/tbxDevice"
        android:layout_alignBottom="@+id/tbxDevice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
